<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mortgage_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk.wablanchett.mortgage_calculator_blanchett.MortgageSummary">

    <Button
        android:text="Modify Mortgage Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataEntryButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Display Payment Summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paymentSummaryButton"
        app:layout_constraintBottom_toTopOf="@+id/dataEntryButton"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="Mortgage Summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="36sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="329dp"
        android:layout_height="289dp"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.33"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0">

        <TextView
            android:text="Monthly Insurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/monthlyIns"
            android:textSize="18sp" />

        <TextView
            android:text="Yearly Taxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textSize="18sp" />

        <TextView
            android:text="Monthly Taxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/monthlyTax"
            android:textSize="18sp" />

        <TextView
            android:text="Standard Monthly Fees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/monthlyFees"
            android:textSize="18sp" />

        <TextView
            android:text="Total Mortgage Cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totalMortgage"
            android:textSize="18sp" />

        <TextView
            android:text="Total Monthly Payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/monthlypayment"
            android:textSize="18sp" />

        <TextView
            android:text="Pay off Date (Monthly)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/payoffdate"
            android:textSize="18sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
