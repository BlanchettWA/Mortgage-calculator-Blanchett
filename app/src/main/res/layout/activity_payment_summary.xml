<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk.wablanchett.mortgage_calculator_blanchett.PaymentSummary">

    <Button
        android:text="Modify Mortgage Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataEntryButton"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:text="Display Mortgage Summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mortgageSummaryButton"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dataEntryButton"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:text="Payment Summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="36sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/dataEntryButton"
        app:layout_constraintVertical_bias="0.0"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="226dp"
        android:weightSum="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.25"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="161dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:text="Monthly Payments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textAlignment="viewStart" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView20" />

            <TextView
                android:text="No. payments:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/monthlyPaymentsBox"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView18" />

            <TextView
                android:text="Monthly Payment: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/monthlyPaymentAmount"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView19" />

            <TextView
                android:text="Interest Paid:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/monthlyInterestBox"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView21" />

            <TextView
                android:text="Pay off Date:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/monthlyPayoffDate"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

            <TextView
                android:text="Bi-weekly Payments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textAlignment="viewEnd" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView22" />

            <TextView
                android:text="No. Payments: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/biweeklyPaymentsBox"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView23" />

            <TextView
                android:text="Bi-Weekly Payment:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/biweeklyPaymentAmount"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView24" />

            <TextView
                android:text="Interest Paid:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/biweeklyInterestBox"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView25" />

            <TextView
                android:text="Pay off Date:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/biweeklyPayoffDate"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="Savings: "
        android:layout_width="328dp"
        android:layout_height="33dp"
        android:id="@+id/savingsBox"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mortgageSummaryButton"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
